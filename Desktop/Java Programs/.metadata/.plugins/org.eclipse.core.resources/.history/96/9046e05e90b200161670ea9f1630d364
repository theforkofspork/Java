package pong.graphics;

import java.awt.Graphics;

public class DrawCenterRects {
	
	int centerRectWidth, centerRectHeight;
	
	public DrawCenterRects(Graphics g, int width, int height)
	{
		centerRectWidth = width/36;
		centerRectHeight = centerRectWidth*3;
		
		for(int i = 0; i < height; i += (centerRectHeight + (height / 18)))
		{
			g.fillRect(((width / 2) - (centerRectWidth / 2)), i,
						centerRectWidth, centerRectHeight);
		}
	}
}
