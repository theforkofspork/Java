package pong.graphics;

import java.awt.Graphics;

public class DrawPlayerOne {
	
	public int playerHeight, playerWidth;
	
	public DrawPlayerOne(Graphics g, int y, int width, int height)
	{
		playerWidth = (width/36);
		playerHeight = (playerWidth*5);
		
		g.fillRect(0, y - 50, playerWidth, playerHeight);
	}
	
}
