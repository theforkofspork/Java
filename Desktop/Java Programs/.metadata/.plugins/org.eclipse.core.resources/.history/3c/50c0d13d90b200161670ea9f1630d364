package pong.graphics;

import java.awt.Graphics;
import java.awt.Point;

public class DrawPlayerOne {
	
	private int playerHeight, playerWidth;
	
	public DrawPlayerOne(Graphics g, Point location, int width, int height)
	{
		playerWidth = (width/48);
		playerHeight = (playerWidth*4);
		
		g.fillRect(location.x, location.y, playerWidth, playerHeight);
	}
	
}
